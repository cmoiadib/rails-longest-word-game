<h1>PLAY THE GAME!</h1>
  <ul class="list-group list-group-horizontal justify-content-center mb-3">
    <% @letters.each do |letter| %>
      <li class="list-group-item mx-2 bg-primary text-white"><%= letter %></li>
    <% end %>
  </ul>

  <div class="m-5">
    <form class="row g-3 align-items-center" action="/score" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <div class="col-12 mb-3">
        <input type="text" name="answer" value="<%= params[:answer] %>" class="form-control" placeholder="Type your word">
      </div>
      <div class="col-12">
        <button type="submit" value="Ask!" class="btn btn-primary w-100">Play</button>
      </div>
    </form>
  </div>
